doctype html
html
    head
        link(rel="stylesheet", href="/app/ui.css")
        link(rel="stylesheet", href="/app/web.css")
        link(rel="stylesheet", href="/app/colours.css")

        title Components

        style.
            .component {
                display: flex;
                margin: 4px 2px;
            }

            .component > .info {
                flex: 1;
            }

            .component > .info span {
                display: block;
                width: 100%;
            }

            .name {
                font-size: 16pt;
            }

            .token {
                font-size: 10pt;
            }

            #components {
                width: 100vw;
                height: 100vh;
                max-height: 100vh;
                max-width: 100vw;
                overflow-y: auto;
            }

            #component-name {
                background: none;
                flex: 1;
                border: none;
                display: block;
                color: var(--blank);
                line-height: 24pt;
                font-size: 10pt;
                padding: 8px 4px;
            }

            #searchbar {
                display: flex;
                width: 100%;
                flex-direction: row;
                justify-content: center;
                align-items: center;
            }

            button, input[type="button"] {
                min-width: 48px;
                font-family: 'Remix';
                background: var(--panel);
            }

            button:focus, input[type="button"]:focus {
                background: var(--active);
            }

            button:hover, input[type="button"]:hover {
                background: var(--accent);
            }

            #pagination {
                display: flex;
                justify-content: center;
            }


        if devMode
            script.
                console.log("Enabling Live-Reload");
                new WebSocket(`ws://${window.location.hostname}:#{devMode}`).addEventListener('message', _ => location.reload());
    body
        section#components

            if msg
                p= msg

            form#searchbar
                a(href=`/import-document/${doc}`)
                    button(type="button", onsubmit="false")#from-documents 
                input#component-name(placeholder="enter-keyword", name="q", value=query || '')
                a
                    button(type="submit") 

            if yourComponents.length > 0
                h3 Your components
                each i in yourComponents
                    div.component
                        .info(data-token=i.componentToken)
                            span.name=i.componentName || i.componentToken
                            span.token=i.componentToken
                        .controls
                            button.info 

            if Object.keys(search.foundComponents).length > 0
                h3 Results
                section#results
                    each name, token in search.foundComponents
                        div.component
                            .info(data-token=token)
                                span.name=name || token
                                span.token=token
                            .controls
                                button.info 

                    #pagination
                        a(href=`?${query ? `q=${query}&` : ''}page=${Math.max(search.page - 1, 0)}`)
                            button 
                        a(href=`?${query ? `q=${query}&` : ''}page=${search.page + 1}`)
                            button 

        script(src="/app/find.js", defer)